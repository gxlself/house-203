
.page{
	min-height: 100vh;
	background: #f8f8f8;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.gxl-white{
	background: #fff;
}
.gxl-b{
	border-bottom: 1rpx solid #EBEBEB;
}
.focus{
	position:relative;
	border-bottom-color: #DD4CB2!important;
}
.focus::after {
	content:' ';
	border-radius: 50%;
	position: absolute;
	z-index:1;
	background-color: rgba(247,85,109, .3);
	-webkit-animation: waveCircle 1s ease normal ;
	        animation: waveCircle 1s ease normal ;
	-webkit-box-shadow: 0 0 10px rgba(0,0,0,.3) inset;
	        box-shadow: 0 0 10px rgba(0,0,0,.3) inset;
}
@-webkit-keyframes waveCircle {
0% {
		left: 50%;
		top: 50%;
		width: 0;
		height: 0;
}
100% {
		left: 0rpx;
		top: -300rpx;
		opacity: 0;
		width: 700rpx;
		height: 700rpx;
}
}
@keyframes waveCircle {
0% {
		left: 50%;
		top: 50%;
		width: 0;
		height: 0;
}
100% {
		left: 0rpx;
		top: -300rpx;
		opacity: 0;
		width: 700rpx;
		height: 700rpx;
}
}

